<div class="container">
  <div class="card-grid">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do  %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 500, crop: :fill %>')">
        <%= cocktail.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
